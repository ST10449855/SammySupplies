<!-- activity_main.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sammy's Seashore Supplies"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="16dp"/>

    <EditText
        android:id="@+id/minutesInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the number of minutes rented"
        android:inputType="number"/>

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:layout_gravity="center"
        android:paddingTop="16dp"/>

    <TextView
        android:id="@+id/hoursOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hours: "
        android:paddingTop="16dp"/>

    <TextView
        android:id="@+id/minutesOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minutes: "
        android:paddingTop="8dp"/>

    <TextView
        android:id="@+id/totalCostOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total cost: R"
        android:paddingTop="8dp"/>

</LinearLayout>
